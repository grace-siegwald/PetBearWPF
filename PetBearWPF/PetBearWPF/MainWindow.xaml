<Window x:Class="PetBearWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetBearWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <TextBlock x:Name="PatCounter" HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" Text="0 Pats" VerticalAlignment="Top" Height="55" Width="256" FontSize="36" TextAlignment="Center"/>
        <Image x:Name="TeddyBearImage" Margin="328,155,10,155" MouseDown="TeddyBearImage_MouseDown" MouseEnter="TeddyBearImage_MouseEnter" MouseLeave="TeddyBearImage_MouseLeave"/>
        <StackPanel x:Name="UpgradePanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Width="290" Margin="10,155,0,0">
            <Label Content="Small Pat Upgrade (Cost: 10 Pats)" FontSize="16"/>
            <TextBlock x:Name="SmallUpgradeCount" TextWrapping="Wrap" Text="Count: 0"/>
            <Button x:Name="SmallUpgradeButton" Content="Buy" Margin="15" RenderTransformOrigin="1,0" Height="32" Width="55" HorizontalAlignment="Left" Click="SmallUpgradeButton_Click"/>
            <Label Content="Medium Pat Upgrade (Cost: 50 Pats)" FontSize="16"/>
            <TextBlock x:Name="MediumUpgradeCount" TextWrapping="Wrap" Text="Count: 0"/>
            <Button x:Name="MediumUpgradeButton" Content="Buy" Margin="15" RenderTransformOrigin="1,0" Height="32" Width="55" HorizontalAlignment="Left" Click="MediumUpgradeButton_Click"/>
            <Label Content="Large Pat Upgrade (Cost: 200 Pats)" FontSize="16"/>
            <TextBlock x:Name="LargeUpgradeCount" TextWrapping="Wrap" Text="Count: 0"/>
            <Button x:Name="LargeUpgradeButton" Content="Buy" Margin="15" RenderTransformOrigin="1,0" Height="32" Width="55" HorizontalAlignment="Left" Click="LargeUpgradeButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="Console" HorizontalAlignment="Center" Margin="0,497,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="339"/>
    </Grid>
</Window>
